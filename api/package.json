{
    "name": "hellotangle-api",
    "version": "0.0.1",
    "description": "API for sending quick messages to the (IOTA) Tangle.",
    "author": "Matthew Maxwell",
    "private": false,
    "license": "MIT",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest --force-exit --detectOpenHandles",
        "test:watch": "jest --watch --detectOpenHandles",
        "test:cov": "jest --coverage --force-exit --detectOpenHandles",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "test:ci": "jest --ci --reporters='default' --reporters='./test/utils/github-action.reporter'"
    },
    "dependencies": {
        "@hapi/joi": "^17.1.1",
        "@iota/core": "^1.0.0-beta.30",
        "@nestjs/common": "^7.6.13",
        "@nestjs/config": "^0.6.3",
        "@nestjs/core": "^7.6.13",
        "@nestjs/platform-express": "^7.6.13",
        "@nestjs/swagger": "^4.8.0",
        "@nestjs/throttler": "^1.1.1",
        "@nestjs/typeorm": "^7.1.5",
        "@types/hapi__joi": "^17.1.6",
        "cache-manager": "^3.4.1",
        "class-validator": "^0.13.1",
        "compression": "^1.7.4",
        "helmet": "^4.4.1",
        "joi": "^17.4.0",
        "pg": "^8.5.1",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^6.6.6",
        "swagger-ui-express": "^4.1.6",
        "typeorm": "^0.2.31",
        "typeorm-naming-strategies": "^2.0.0"
    },
    "devDependencies": {
        "@nestjs/cli": "^7.5.6",
        "@nestjs/schematics": "^7.2.7",
        "@nestjs/testing": "^7.6.14",
        "@types/bluebird": "^3.5.33",
        "@types/compression": "^1.7.0",
        "@types/express": "^4.17.11",
        "@types/jest": "^26.0.20",
        "@types/node": "^14.14.31",
        "@types/supertest": "^2.0.10",
        "@typescript-eslint/eslint-plugin": "^4.18.0",
        "@typescript-eslint/parser": "^4.18.0",
        "core-js": "^3.9.1",
        "eslint": "^7.20.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "jest": "^26.6.3",
        "prettier": "^2.2.1",
        "supertest": "^6.1.3",
        "ts-jest": "^26.5.4",
        "ts-loader": "^8.0.17",
        "ts-node": "^9.1.1",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.1.5"
    },
    "jest": {
        "rootDir": "./",
        "modulePaths": [
            "<rootDir>"
        ],
        "moduleDirectories": [
            "node_modules",
            "src"
        ],
        "moduleNameMapper": {
            "^@api/(.*)$": "<rootDir>/src/$1"
        },
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "collectCoverage": true,
        "collectCoverageFrom": [
            "<rootDir>/src/**/*.(service|repository|util|command|query).ts"
        ],
        "coverageDirectory": "./coverage",
        "testMatch": [
            "<rootDir>/test/**/*.(service|repository|util|command|query).(test|spec).ts"
        ],
        "testEnvironment": "node"
    }
}
